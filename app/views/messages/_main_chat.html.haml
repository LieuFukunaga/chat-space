.main-chat

  .main-chat__header
    .main-chat__header__left-content
      %p.group-name
        = @group.name
      %ul.members
        %p.member-tag Memberï¼š
        %p.member-name
          - @users.each do |user|
            %li
              = user.name
    = link_to edit_group_path(@group.id), class:"edit-btn" do
      Edit
  .main-chat__body
    = render @messages


  .main-chat__form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :body, class: 'form__message', placeholder: 'type a message'
        = f.label :image, class: 'form__image' do
          %i.fa.fa-image
          = f.file_field :image, class: 'form__file'
      =f.submit 'Send', class: 'submit-btn'























