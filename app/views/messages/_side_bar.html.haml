.side-bar
  .side-bar__header
    .side-bar__header__contents
      %p.name-box
        = current_user.name
      %p.icons
        = link_to new_group_path, method: :get, class:"create-group-icon" do
          %i.far.fa-edit
          %span<>
        = link_to edit_user_path(current_user), class:"edit-account-icon" do
          %i.fas.fa-cog
          %span<>
  .side-bar__body
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group), class:"group__name" do
          = group.name
        %p.group__message
          = group.show_last_message
